


@model ShoppingCart

<form asp-action="Details" method="post">
    <div class="container mt-5">
        <div class="row">
            <input type="hidden" asp-for="productId" />
            <div class="col-md-6">
                <img src="~/Images/Product/@System.IO.Path.GetFileName(Model.product.Img)" class="img-fluid" alt="Product Image">
            </div>

            <div class="col-md-6 d-flex flex-column justify-content-center align-items-center text-center">
                <!-- Product Name -->
                <h1 class="display-4">@Model.product.Name</h1>

                <!-- Product Category -->
                <p class="text-muted mb-2">
                    Category: <span class="font-weight-bold">@Model.product.Category.Name</span>
                </p>

                <!-- Product Price -->
                <p class="lead text-success mb-3">Price: $@Model.product.Price</p>

                <!-- Product Description -->
                <p class="text-muted mb-4">@Model.product.Description</p>

                <!-- Quantity Input -->
                <div class="form-group text-center">
                    <label for="productCount" class="form-label">Quantity:</label>
                    <input asp-for="Count" type="number" class="form-control text-center w-100" style="font-size: 1.5rem;" min="1" max="100" value="1">
                </div>

                <!-- Add to Cart Button -->
                <button class="btn btn-lg btn-primary mt-3" type="submit">
                    <i class="fas fa-cart-plus"></i> Add to Cart
                </button>
            </div>
        </div>
    </div>
</form>
